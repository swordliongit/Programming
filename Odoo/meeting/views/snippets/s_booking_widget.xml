<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="transfer_booking" name="Transfer Booking Widget">
        <t t-call="transfer.form_1"/>
    </template>
    <template id="transfer_booking_widgets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']" position="after">
            <div id="transfer_area" class="o_panel">
                <div class="o_panel_header">
					Transfer Widgets
                </div>
                <div class="o_panel_body">
                    <t t-snippet="transfer.transfer_booking" t-thumbnail="/muk_website_grid/static/src/img/section.svg">
                        <keywords>transfer</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>