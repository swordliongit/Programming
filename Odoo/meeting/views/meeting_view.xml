                        <h1>
                            <field class="o_text_overflow" name="name" default_focus="1" placeholder="meeting Adı"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="x_scanned_id"/>
                            <field name="x_scanner_id"/>
                            <!-- <field name="x_hotel_name"/>
                            <field name="x_device_update" groups="base.group_system,base.group_erp_manager"/>
                            <field name="x_update_date"/>
                            <field name="x_uptime"/>
