                            <field name="meeting_id" invisible="1" groups="base.group_system,base.group_erp_manager"/>
                            <field name="city" invisible="1"/>
                            <field name="live_status" invisible="1" groups="base.group_system,base.group_erp_manager"/>
                            <field name="last_action_user" invisible="1" groups="base.group_system,base.group_erp_manager"/>
                            <field name="meeting_status" invisible="1" groups="base.group_system,base.group_erp_manager"/>
                            <field name="meeting_home_mode" invisible="1" widget="boolean_toggle" groups="base.group_system,base.group_erp_manager"/>
                            <field name="customer_id" invisible="1" widget="many2many_tags" groups="base.group_system,base.group_erp_manager"/>
                            <field name="meeting_update" invisible="1" widget="boolean_toggle" groups="base.group_system,base.group_erp_manager"/>
