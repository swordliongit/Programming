                            <field name="x_mac"/>
                            <field name="x_device_info"/>
                            <field name="x_ip"/>
                            <field name="x_subnet"/>
                            <field name="x_dhcp" widget="boolean_toggle"/>
                            <field name="x_enable_wireless" widget="boolean_toggle"/>
                            <field name="x_enable_ssid1" widget="boolean_toggle"/>
                            <field name="x_enable_ssid2" widget="boolean_toggle"/>
                            <field name="x_enable_ssid3" widget="boolean_toggle"/>
