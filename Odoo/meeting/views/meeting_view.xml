    <record id="meeting_kanban" model="ir.ui.view">
        <field name="name">meeting.profile.kanban</field>
        <field name="model">meeting.profile</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" sample="1">
                <!-- <field name="x_hotel_name"/>
                <field name="x_mac"/>
                <field name="x_ip"/> -->
                <field name="x_scanned_id"/>
                <field name="x_scanner_id"/>


                <field name="id" invisible="1"/>
                <field name="meeting_id" invisible="1"/>
                <field name="city" invisible="1"/>
                <field name="meeting_image" invisible="1"/>
                <field name="meeting_status" invisible="1"/>
                <field name="customer_id" invisible="1"/>
                <field name="live_status" invisible="1"/>
                <field name="meeting_version" invisible="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <t t-if="record.meeting_status.raw_value == 'passive'">
                                <div class="o_kanban_image_fill_left" style="background-image:url('meeting/static/src/img/passive_icon.png')"/>
                            </t>
                            <t t-if="record.meeting_status.raw_value == 'active'">
                                <div class="o_kanban_image_fill_left" style="background-image:url('meeting/static/src/img/active_icon.png')"/>
                            </t>
                            <t t-if="record.meeting_status.raw_value == 'home'">
                                <div class="o_kanban_image_fill_left" style="background-image:url('meeting/static/src/img/home_icon.png')"/>
                            </t>
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <div class="row">
                                        <div class="col-7">
                                            <field name="name"/>
                                        </div>
                                        <div class="col-1">
                                            <t t-if="record.live_status.raw_value == 'offline'">
                                                <i class="fa fa-exclamation-triangle fa-2x text-danger"></i>
                                            </t>
                                            <t t-if="record.live_status.raw_value == 'wifionline'">
                                                <i class="fa fa-wifi fa-2x text-success"></i>
                                            </t>
                                            <t t-if="record.live_status.raw_value == 'gsmonline'">
                                                <i class="fa fa-mobile fa-2x text-success"></i>
                                            </t>
                                        </div>
                                        <div class="col-1" groups="base.group_system,base.group_erp_manager">
                                            <t t-if="!record.meeting_version.raw_value">
                                                <button class="btn btn-danger btn-circle btn-sm">No</button>
                                            </t>
                                            <t t-if="record.meeting_version.raw_value">
                                                <button class="btn btn-primary btn-circle btn-sm"><field name="meeting_version"/></button>
                                            </t>
                                        </div>
                                    </div>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li>
                                        <field name="city"/>
                                    </li>
                                    <li>
                                        Son Güncelleyen:
                                        <field name="last_action_user"/>
                                    </li>
                                </ul>
                                <div class="page-content page-container mb-2" id="page-content">
                                    <div class="padding">
                                        <div class="row">
                                            <div class="col">
                                                <button name="create_emergency_report" type="object" confirm="Are You Sure To Send Notification To Ahm" class="btn btn-primary btn-rounded btn-icon">
                                                    <i class="fa fa-h-square"></i>
                                                </button>
                                                <button name="create_ambulance_report" type="object" confirm="Are You Sure To Send Notification To Ambulance" class="btn btn-primary btn-rounded btn-icon">
                                                    <i class="fa fa-ambulance"></i>
                                                </button>
                                                <button name="create_fire_report" type="object" confirm="Are You Sure To Send Notification To Fire Department" class="btn btn-primary btn-rounded btn-icon">
                                                    <i class="fa fa-fire-extinguisher"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-xs-offset-0 col-sm-6 col-sm-offset-3">
                                        <t t-if="record.live_status.raw_value != 'offline'">
                                            <button name="write_Device_Status_Active" type="object" class="btn btn-outline-success btn-block" attrs="{'invisible': [('meeting_status', '!=', 'passive')]}">Devreye Al</button>
                                            <!--
                                        <button name="write_Device_Status_Home" type="object" class="btn btn-outline-warning btn-block" attrs="{'invisible': [('meeting_status', '!=', 'passive')]}">Evdeyim</button>
                                        -->
                                            <button name="write_Device_Status_Passive" type="object" class="btn btn-outline-danger btn-block" attrs="{'invisible': [('meeting_status', '!=', 'active')]}">Devre Dışı</button>
                                            <!--
                                        <button name="write_Device_Status_Home" type="object" class="btn btn-outline-warning btn-block" attrs="{'invisible': [('meeting_status', '!=', 'active')]}">Evdeyim</button>
                                        -->
                                            <button name="write_Device_Status_Active" type="object" class="btn btn-outline-success btn-block" attrs="{'invisible': [('meeting_status', '!=', 'home')]}">Devreye Al</button>
                                            <button name="write_Device_Status_Passive" type="object" class="btn btn-outline-danger btn-block" attrs="{'invisible': [('meeting_status', '!=', 'home')]}">Devre Dışı</button>
                                        </t>
                                    </div>
                                </div>
                                <div class="o_row">
                                    <span class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    
